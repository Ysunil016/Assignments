package com.Spring.Bean;

import java.sql.Timestamp;

import javax.validation.constraints.NotNull;

import org.bson.types.ObjectId;
import org.springframework.data.annotation.Id;
import org.springframework.data.mongodb.core.mapping.Document;

@Document(collection = "driverRating")
public class DriverRating {

	@Id
	private ObjectId ratingId;
	private Timestamp time;
	@NotNull
	private String passengerId;
	@NotNull
	private String driverId;
	@NotNull
	private int rating;

	// Important to Be for Mockito Testing
	public DriverRating() {
	}

	public DriverRating(String toDriver, String fromPassenger, int rating) {
		
		this.ratingId = new ObjectId();
		this.driverId = toDriver;
		this.passengerId = fromPassenger;
		this.rating = rating;
	}

	public ObjectId getRatingId() {
		return ratingId;
	}

	public String getPassengerId() {
		return passengerId;
	}

	public void setPassengerId(String passengerId) {
		this.passengerId = passengerId;
	}

	public String getDriverId() {
		return driverId;
	}

	public void setDriverId(String driverId) {
		this.driverId = driverId;
	}

	public int getRating() {
		return rating;
	}

	public void setRating(int rating) {
		this.rating = rating;
	}

}
